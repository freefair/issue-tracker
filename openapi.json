{
  "openapi": "3.0.3",
  "info": {
    "title": "Issue Tracker API",
    "description": "RESTful API for managing boards, tasks, and backlog categories in the Issue Tracker application.",
    "version": "1.0.0",
    "contact": {
      "name": "TFSolution Development Team"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8080/api",
      "description": "Local development server"
    }
  ],
  "tags": [
    {
      "name": "Boards",
      "description": "Board management operations"
    },
    {
      "name": "Tasks",
      "description": "Task CRUD and search operations"
    },
    {
      "name": "Backlog Categories",
      "description": "Backlog category management"
    },
    {
      "name": "Tags",
      "description": "Tag retrieval and filtering"
    }
  ],
  "paths": {
    "/boards": {
      "get": {
        "tags": ["Boards"],
        "summary": "Get all boards",
        "description": "Retrieve a list of all boards",
        "operationId": "getAllBoards",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/BoardResponse"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Boards"],
        "summary": "Create a new board",
        "description": "Create a new board with name and optional description",
        "operationId": "createBoard",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateBoardRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Board created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BoardResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/boards/{id}": {
      "get": {
        "tags": ["Boards"],
        "summary": "Get board by ID",
        "description": "Retrieve a single board by its ID",
        "operationId": "getBoardById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BoardResponse"
                }
              }
            }
          },
          "404": {
            "description": "Board not found"
          }
        }
      },
      "put": {
        "tags": ["Boards"],
        "summary": "Update board",
        "description": "Update an existing board's name and description",
        "operationId": "updateBoard",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateBoardRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Board updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BoardResponse"
                }
              }
            }
          },
          "404": {
            "description": "Board not found"
          }
        }
      },
      "delete": {
        "tags": ["Boards"],
        "summary": "Delete board",
        "description": "Delete a board and all its associated tasks",
        "operationId": "deleteBoard",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Board deleted successfully"
          },
          "404": {
            "description": "Board not found"
          }
        }
      }
    },
    "/boards/{boardId}/tasks": {
      "get": {
        "tags": ["Tasks"],
        "summary": "Get tasks by board",
        "description": "Retrieve all tasks for a board, optionally filtered by status",
        "operationId": "getTasksByBoard",
        "parameters": [
          {
            "name": "boardId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "status",
            "in": "query",
            "required": false,
            "schema": {
              "$ref": "#/components/schemas/TaskStatus"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TaskResponse"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Tasks"],
        "summary": "Create task",
        "description": "Create a new task in the specified board",
        "operationId": "createTask",
        "parameters": [
          {
            "name": "boardId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateTaskRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Task created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          },
          "404": {
            "description": "Board not found"
          }
        }
      }
    },
    "/tasks/{id}": {
      "get": {
        "tags": ["Tasks"],
        "summary": "Get task by ID",
        "description": "Retrieve a single task by its ID",
        "operationId": "getTaskById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskResponse"
                }
              }
            }
          },
          "404": {
            "description": "Task not found"
          }
        }
      },
      "patch": {
        "tags": ["Tasks"],
        "summary": "Update task",
        "description": "Partially update a task (any subset of fields)",
        "operationId": "updateTask",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateTaskRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Task updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskResponse"
                }
              }
            }
          },
          "404": {
            "description": "Task not found"
          }
        }
      },
      "delete": {
        "tags": ["Tasks"],
        "summary": "Delete task",
        "description": "Delete a task permanently",
        "operationId": "deleteTask",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Task deleted successfully"
          },
          "404": {
            "description": "Task not found"
          }
        }
      }
    },
    "/tasks/{id}/move": {
      "patch": {
        "tags": ["Tasks"],
        "summary": "Move task",
        "description": "Move a task to a different status and position",
        "operationId": "moveTask",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MoveTaskRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Task moved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskResponse"
                }
              }
            }
          },
          "404": {
            "description": "Task not found"
          }
        }
      }
    },
    "/tasks/search": {
      "get": {
        "tags": ["Tasks"],
        "summary": "Search tasks in board",
        "description": "Search tasks within a specific board by title, description, or tags",
        "operationId": "searchTasks",
        "parameters": [
          {
            "name": "boardId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "q",
            "in": "query",
            "required": true,
            "description": "Search query string",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Search results",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TaskResponse"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tasks/search/global": {
      "get": {
        "tags": ["Tasks"],
        "summary": "Search tasks globally",
        "description": "Search tasks across all boards by title, description, or tags",
        "operationId": "searchTasksGlobally",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "required": true,
            "description": "Search query string",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Search results",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TaskResponse"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/boards/{boardId}/tags": {
      "get": {
        "tags": ["Tags"],
        "summary": "Get tags for board",
        "description": "Retrieve all unique tags used in tasks for a specific board",
        "operationId": "getTags",
        "parameters": [
          {
            "name": "boardId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "q",
            "in": "query",
            "required": false,
            "description": "Filter tags by search query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of tags",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/boards/{boardId}/backlog-categories": {
      "get": {
        "tags": ["Backlog Categories"],
        "summary": "Get backlog categories",
        "description": "Retrieve all backlog categories for a board, ordered by position",
        "operationId": "getBacklogCategories",
        "parameters": [
          {
            "name": "boardId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/BacklogCategoryResponse"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Backlog Categories"],
        "summary": "Create backlog category",
        "description": "Create a new backlog category for a board",
        "operationId": "createBacklogCategory",
        "parameters": [
          {
            "name": "boardId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateBacklogCategoryRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Category created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BacklogCategoryResponse"
                }
              }
            }
          },
          "404": {
            "description": "Board not found"
          }
        }
      }
    },
    "/backlog-categories/{id}": {
      "get": {
        "tags": ["Backlog Categories"],
        "summary": "Get category by ID",
        "description": "Retrieve a single backlog category by its ID",
        "operationId": "getBacklogCategoryById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BacklogCategoryResponse"
                }
              }
            }
          },
          "404": {
            "description": "Category not found"
          }
        }
      },
      "patch": {
        "tags": ["Backlog Categories"],
        "summary": "Update category",
        "description": "Update a backlog category's name or position",
        "operationId": "updateBacklogCategory",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateBacklogCategoryRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Category updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BacklogCategoryResponse"
                }
              }
            }
          },
          "404": {
            "description": "Category not found"
          }
        }
      },
      "delete": {
        "tags": ["Backlog Categories"],
        "summary": "Delete category",
        "description": "Delete a backlog category (tasks are not deleted, only unassigned)",
        "operationId": "deleteBacklogCategory",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Category deleted successfully"
          },
          "404": {
            "description": "Category not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BoardResponse": {
        "type": "object",
        "required": ["id", "name", "createdAt"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string",
            "example": "Project Alpha"
          },
          "description": {
            "type": "string",
            "nullable": true,
            "maxLength": 2000,
            "example": "Main development board for Project Alpha"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "CreateBoardRequest": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255,
            "example": "Project Alpha"
          },
          "description": {
            "type": "string",
            "nullable": true,
            "maxLength": 2000,
            "example": "Main development board"
          }
        }
      },
      "UpdateBoardRequest": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
          },
          "description": {
            "type": "string",
            "nullable": true,
            "maxLength": 2000
          }
        }
      },
      "TaskResponse": {
        "type": "object",
        "required": ["id", "boardId", "title", "status", "position", "tags", "createdAt", "updatedAt"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "boardId": {
            "type": "string",
            "format": "uuid"
          },
          "title": {
            "type": "string",
            "example": "Implement user authentication"
          },
          "description": {
            "type": "string",
            "example": "Add JWT-based authentication with refresh tokens"
          },
          "status": {
            "$ref": "#/components/schemas/TaskStatus"
          },
          "position": {
            "type": "integer",
            "minimum": 0,
            "example": 1
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": ["backend", "security", "high-priority"]
          },
          "backlogCategoryId": {
            "type": "string",
            "format": "uuid",
            "nullable": true
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "CreateTaskRequest": {
        "type": "object",
        "required": ["title", "status", "position"],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 500,
            "example": "Implement user authentication"
          },
          "description": {
            "type": "string",
            "maxLength": 10000,
            "example": "Add JWT-based authentication"
          },
          "status": {
            "$ref": "#/components/schemas/TaskStatus"
          },
          "position": {
            "type": "integer",
            "minimum": 0
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": ["backend", "security"]
          },
          "backlogCategoryId": {
            "type": "string",
            "format": "uuid",
            "nullable": true
          }
        }
      },
      "UpdateTaskRequest": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 500
          },
          "description": {
            "type": "string",
            "maxLength": 10000
          },
          "status": {
            "$ref": "#/components/schemas/TaskStatus"
          },
          "position": {
            "type": "integer",
            "minimum": 0
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "backlogCategoryId": {
            "type": "string",
            "format": "uuid",
            "nullable": true
          }
        }
      },
      "MoveTaskRequest": {
        "type": "object",
        "required": ["status", "position"],
        "properties": {
          "status": {
            "$ref": "#/components/schemas/TaskStatus"
          },
          "position": {
            "type": "integer",
            "minimum": 0
          }
        }
      },
      "TaskStatus": {
        "type": "string",
        "enum": ["BACKLOG", "TODO", "IN_PROGRESS", "READY_FOR_DEPLOYMENT", "DONE"],
        "example": "TODO"
      },
      "BacklogCategoryResponse": {
        "type": "object",
        "required": ["id", "boardId", "name", "position", "createdAt", "updatedAt"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "boardId": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string",
            "example": "Critical"
          },
          "position": {
            "type": "integer",
            "minimum": 0,
            "example": 0
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "CreateBacklogCategoryRequest": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255,
            "example": "Critical"
          },
          "position": {
            "type": "integer",
            "minimum": 0,
            "default": 0,
            "example": 0
          }
        }
      },
      "UpdateBacklogCategoryRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
          },
          "position": {
            "type": "integer",
            "minimum": 0
          }
        }
      }
    }
  }
}
